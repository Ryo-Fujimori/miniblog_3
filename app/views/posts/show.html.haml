%h1 
  Post詳細
%h2 
  = I18n.t('attributes.user.email')
= @post.user.email
%h2 
  = I18n.t('attributes.post.content')
= @post.content
%div 
  - if @post.user == current_user
    = link_to 'Edit', edit_users_post_path(@post)
    = link_to 'Delete', post_path(@post), data: { turbo_method: :delete, turbo_confirm: "削除します、よろしいですか？" }
  = link_to 'Back', posts_path
